use alienfile;
plugin 'PkgConfig' => 'uuid';
share {
  plugin Download => (
    url => 'http://sourceforge.net/projects/libuuid/files/libuuid-1.0.3.tar.gz',
    version => qr/([0-9\.]+)/,
  );
  plugin Extract => 'tar.gz';
  plugin 'Build::Autoconf';

  build [
    '%{configure}',
    '%{make}',
    '%{make} install',
  ];

  plugin 'Gather::IsolateDynamic';
}
